<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category id="motion kit" name="MOTION KIT" colour="#e65722" icon="robot">
    <block type="motionkit_move_motor">
      <value name="wheel_speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>

    <block type="motionkit_stop"/>

    <block type="motionkit_servo_write_angle">
      <value name="angle">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
    </block>
    <block type="motionkit_servo_micro_angle">
      <value name="angle">
        <shadow type="math_number">
          <field name="NUM">5</field>
        </shadow>
      </value>
    </block>

    <block type="motionkit_servo360_write">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
    </block>
  </category>

</xml>